{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/phaser-ce/typescript/pixi.d.ts"
    ],
    "outDir": "dist"
  },
  "include": [
    "client/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client/**/*.spec.ts",
    "client/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
