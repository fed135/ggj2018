{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es2016"
    ],
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "**/*.spec.ts",
    "**/__tests__/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
